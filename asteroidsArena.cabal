name:                asteroidsArena
version:             0.1.0.0
author:              Noa Aarts and Morris Roskam
maintainer:          itepastra@gmail.com
category:            Game
build-type:          Simple
cabal-version:       >=1.10

executable editor
  main-is:            levelCreator.hs
  build-depends:       base >= 4,
                       gloss,
                       random,
                       containers,
                       aeson,
                       directory-tree,
                       text,
                       directory
  hs-source-dirs:      src
  default-language:    Haskell2010
  other-modules:       AFunctions
                     , Types1

executable aa2
  ghc-options:         -threaded
  main-is:             main.hs
  build-depends:       base >= 4,
                       gloss,
                       random,
                       containers,
                       aeson,
                       directory-tree,
                       text,
                       directory
  hs-source-dirs:      src
  other-modules:       Controller
                     , Model
                     , View
                     , Physics
                     , VectorCalc
                     , Player
                     , Asteroid
                     , Bullet
                     , Wall
                     , Rotation
                     , Constants
                     , Sprites
                     , TypeClasses
                     , Colors
                     , CoordCalc
                     , AsteroidSpawnFunctions
                     , LevelImport
                     , Level
                     , Input
                     , JSONfuncs
                     , Hasa
                     , Types1
                     , Stars
                     , Select
                     , DefaultLevels
                     , LevelHelperFunctions
                     , ExitStrings
                     , AFunctions
                     , ParenthesesHelpers
                     , Pictured
  default-language:    Haskell2010